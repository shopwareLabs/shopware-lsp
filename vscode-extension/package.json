{
  "name": "shopware-lsp",
  "displayName": "Shopware Language Server",
  "description": "Provide Shopware 6 language server support for PHP and XML files.",
  "version": "0.1.0",
  "publisher": "shopware",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:php",
    "onLanguage:xml",
    "onLanguage:twig"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shopwareLabs/shopware-lsp.git"
  },
  "pricing": "Free",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shopwareLSP.restart",
        "title": "Restart Shopware Language Server"
      },
      {
        "command": "shopwareLSP.forceReindex",
        "title": "Shopware: Force Reindex"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.8",
    "glob": "^7.2.3",
    "minimatch": "^3.1.2",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  }
}
